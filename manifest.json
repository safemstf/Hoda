{
  "manifest_version": 3,
  "name": "Hoda",
  "version": "0.1.0",
  "description": "Navigate pages with voice commands for visually impaired users.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tts",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/vender/**/*",
        "src/models/*",
        "src/worker/*",
        "services/stt/src/*.js",
        "tests/*.html",
        "tests/*.css",
        "tests/*.js",
        "src/vender/bin/libstream.js",
        "src/worker/speech-worker.js",
        "src/models/*.bin"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}